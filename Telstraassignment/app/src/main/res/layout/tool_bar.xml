<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="apiResponse"
            type="com.telstraassignmentapp.model.ApiResponse" />

    </data>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/holo_green_light"
        android:theme="@style/AppTheme"
        app:elevation="@dimen/sp_10"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sp_10"
                android:layout_weight="0.7"
                android:text="@{apiResponse.title}"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/img_notification_bell"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.3"
                android:contentDescription="@string/content_description"
                android:scaleType="center"
                android:src="@drawable/img_refresh"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


</layout>